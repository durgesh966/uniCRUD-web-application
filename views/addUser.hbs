<h1 class="mt-4">-</h1>
<div class="container mt-2">
  <h3 class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">add new user</h3>
  <form id="userForm" class="forma" enctype="multipart/form-data">
    <div class="row">
      <div class="col-md-6">
        {{!-- Name --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
        </div>
        {{!-- email --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
        </div>
        {{!-- How did you hear about this? : --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label class="mr-2">How did you hear about this? : </label>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="linkedin" name="how_heard" value="linkedin">
            <label class="form-check-label" for="linkedin">LinkedIn</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="friends" name="how_heard" value="friends">
            <label class="form-check-label" for="friends">Friends</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="jobportal" name="how_heard" value="jobportal">
            <label class="form-check-label" for="jobportal">Job Portal</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="others" name="how_heard" value="others">
            <label class="form-check-label" for="others">Others</label>
          </div>
        </div>
        {{!-- city and states --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="city">City:</label>
          <select class="form-control" id="city" name="city">
            <option value="Mumbai">Mumbai</option>
            <option value="Pune">Pune</option>
            <option value="Ahmedabad">Ahmedabad</option>
            <option value="Bhopal">Bhopal</option>
            <option value="Khandwa">Khandwa</option>
          </select>
        </div>

        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="state">State:</label>
          <input type="text" class="form-control" id="state" name="state" list="states">
          <datalist id="states">
            <option name="state" value="Gujarat">
            <option name="state" value="Maharashtra">
            <option name="state" value="Karnataka">
            <option name="state" value="Madhya Pradesh">
          </datalist>
        </div>
      </div>

      <div class="col-md-6">
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label class="mr-2">Gender:</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="male" value="male" required>
            <label class="form-check-label" for="male">Male</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="female" value="female" required>
            <label class="form-check-label" for="female">Female</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="other" value="other" required>
            <label class="form-check-label" for="other">Other</label>
          </div>
        </div>
        {{!-- age --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="age">Age</label>
          <input type="number" class="form-control" id="age" name="age" placeholder="Enter your age" required>
        </div>
        {{!-- phone --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="phone">Phone</label>
          <input type="number" pattern="[0-9]*" class="form-control" id="phone" name="phone"
            placeholder="Enter phone number" required>
        </div>
        {{!-- addresss --}}
        <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
          <label for="address">Address</label>
          <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter current address"
            required></textarea>
        </div>
      </div>
    </div>
    <div class="form-group1 border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
      <label for="image">Profile Image</label>
      <input type="file" class="form-control-file" id="image" name="image">
    </div>
    <div class="border rounded shadow p-2 text-center form-group mb-2 bg-light text-dark">
    <button type="submit" class="btn btn-outline-danger">Add User</button>
    </div>
  </form>
</div>
</div>
{{!-- end --}}
